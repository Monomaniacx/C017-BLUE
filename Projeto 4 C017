const prompt = require('prompt-sync')()
console.clear()

// Declaração de variaveis

let heroi = ''
let opcoes = 0
let xone = 'nenhum'
let coracao = true
let obterstamina = 0
let poderessheikah = 0
let batalha = 0
let zelda = false


let info = {
  dia: 1,
  stamina: 100,
  poder: 100,
  hora: 'manha',
  tempo: 1,
  vidaGanon: 300,

  variarHora: function (tempo) {
  if (tempo == 1) {
    this.hora = 'manha'
  } else if (tempo == 2) {
    this.hora = 'tarde'
  } else if (tempo == 3){
    this.hora = 'noite'
  }
  },

  variarStamina: function (pontos) {
      this.stamina += pontos
    if (this.stamina < 0) {
      this.stamina = 0
    }
    if (pontos > 0) {
      console.log(`Você ganhou ${pontos} de stamina`)
    } else {
      console.log(`Você perdeu ${pontos} de stamina`)
    }
  },


  variarPoder: function (pontos) {
    this.poder += pontos
    if (pontos > 0) {
      console.log(`Você ganhou ${pontos} de poderes na sua tabua Sheikah`)
    } else {
      console.log(`Você perdeu ${pontos} de poderes na sua tabua Sheikah`)
    }
  },

 variarVidaGanon: function (pontos) {
    this.vidaGanon += pontos
    if (this.vidaGanon < 0) {
      this.vidaGanon = 0
    }
    console.log(`O Ganon perdeu ${pontos} de vida`)
  }
}


let comecajogo = [
  `\n 1 - Obter Stamina`
  `\n 2 - Conseguir poderes Sheikah`
  `\n 3 - Repousar perto da fogueira`
  `\n 4 - Derrotar o Ganon e salvar Hyrule`
  `\n 5 - Não levantar da cama e ficar com a princesa Zelda`
]

